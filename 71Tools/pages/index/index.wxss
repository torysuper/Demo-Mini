page{
    width: 100%;
    height: 100%;
}
.index{
  flex-flow:column nowrap;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction:column;
  width: 100%;
  height: 100%;
}
.top{
    width: 100%;
    text-align: center;
    height: 20%;
    font-size: 38rpx;
    border-bottom: 1px solid #f5f5f5;
}
.bd{
    flex: 1;
    width: 100%;
    height: auto;
    overflow: hidden;
}
.bd.table{
    flex: 1;
    width: 100%;
    height: auto;
    font-size: 36rpx;
    color: #666;
}
.btm{
    width:99%;
    height:8%;
    
    
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;

}
.weui-btn{
  display: flex;
  flex-direction: column;
  height:70%;
  align-items: center;
  color: #aaa;
}
.table-hd{
  border-top:2px solid  #aaa;
  display: flex;
  flex-direction: row;
  height: 30%;
  width:100%;
  justify-content: space-between;
}
.text2{
    padding: 25rpx 0;
    font-size: 40rpx;
    border: 1px solid #a9aeb3;
    border-radius:0px;
    width: 100%;
    height: auto;
    color: #666;
}
.tr{
  top: 10%;
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th,.td{
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}
.th4,.th2,.td4,.td2{
  width: 40%;
}
.th{
  font-weight: 800;
  background-color: #42b6ac;
  font-size: 28rpx;
  color: #330e0e;
}
.td{
  font-size: 20rpx;
  color: #000000;
}
.mini-btn{
  text-align: center; 
  border: 1px solid #a9aeb3;
  width: 20%;
  margin: 0 auto;
  padding-top: 15px;
  border-radius:0;
}
.text3{
  
  font-size: 30rpx;
  line-height: 90rpx;
  font-weight: bold; 
  vertical-align:middle;
  display: table-cell;
}
